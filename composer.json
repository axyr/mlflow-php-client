{
    "name": "martijn/mlflow-php-client",
    "description": "A PHP client library for MLflow REST API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Martijn",
            "email": "info@axyrmedia.nl"
        }
    ],
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0",
        "psr/simple-cache": "^1.0 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93",
        "infection/infection": "^0.29",
        "phpdocumentor/phpdocumentor": "^3.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^9.5 || ^10.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "suggest": {
        "illuminate/support": "^10.0|^11.0 - Required for Laravel integration (ServiceProvider, Facade, config)",
        "illuminate/contracts": "^10.0|^11.0 - Required for Laravel integration"
    },
    "autoload": {
        "psr-4": {
            "MLflow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MLflow\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "docs": "phpdoc run",
        "mutation": "infection"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "infection/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MLflow\\Laravel\\MLflowServiceProvider"
            ],
            "aliases": {
                "MLflow": "MLflow\\Laravel\\Facades\\MLflow"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
