{
    "name": "martijn/mlflow-php-client",
    "description": "A PHP client library for MLflow REST API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Martijn",
            "email": "info@axyrmedia.nl"
        }
    ],
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93",
        "phpdocumentor/phpdocumentor": "^3.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^9.5 || ^10.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "MLflow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MLflow\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "docs": "phpdoc run"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
